.baiot{
  text-align: center;
  align-items: center;
  background-color: #eeeeee;
  height: 100rpx;
  display: flex;
  justify-content: center;
}
.neirong{
  background-color: #dfdfdf;
  height: 100%;
  padding: 10rpx;
}
.one{
  width: 100%;
  height: 130rpx;
  /* background-color: red; */
}
.one .toux{
  width: 100rpx;
  height: 100rpx;
  border: 1px solid rgb(196, 196, 196);
  border-radius: 50%;
  float: left;
  margin-top: 10rpx;
  
}

.one image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.one .wenzi{
  float: left;
  width: 80%;
  /* height: 80rpx; */
  margin-left: 30rpx;
  background-color: white;
  margin-top: 40rpx;
  display: flex;
  line-height: 60rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
  font-size: 25rpx;
  padding-right: 10rpx;
}


